{
  "name": "plan-recalculation-nightly",
  "cron": "0 3 * * *",
  "request": {
    "method": "POST",
    "url": "https://<PROJECT_REF>.functions.supabase.co/recalculate-plan",
    "headers": {
      "content-type": "application/json",
      "Authorization": "Bearer ${SUPABASE_FUNCTION_SECRET}"
    },
    "body": {
      "trigger": "scheduled"
    }
  },
  "retry": {
    "count": 3,
    "interval": 300
  },
  "alerting": {
    "webhook": "${SCHEDULE_ALERT_WEBHOOK}",
    "channels": ["slack"]
  }
}
